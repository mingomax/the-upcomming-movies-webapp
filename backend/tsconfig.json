{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "./dist",
    "removeComments": true,
    "typeRoots": ["node_modules/@types"],
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src"
  },
  "include": [
     "src/**/*.ts",
     "src/*.ts"
  ],
  "exclude": ["node_modules"],
  "lib": ["dom", "es2017"]
}
